      <form action="/delete" method="post" class="d-inline">
        <input type="hidden" name="listName" value="<%= listTitle === 'Work List' ? 'Work' : 'default' %>">
        <input type="hidden" name="itemIndex" value="<%= i %>">
        <button type="submit" class="delete-btn">âœ”</button>
      </form>
      <p><%= newListItems[i] %></p>
    </div>
  <% } %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value="<%= listTitle === 'Work List' ? 'Work' : '' %>">+</button>
  </form>
</div>

